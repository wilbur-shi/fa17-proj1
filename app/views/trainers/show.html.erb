<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<h3>Your pokemon</h3>
<% @trainer.pokemons.each do |p| %>
	Name: <%= p.name %> </br>
	Level: <%= p.level %> </br>
	Health: <%= p.health %> <%= button_to "Damage!", damage_path(id: p), :class => "button small", :method => :patch %> </br>
</br>
<% end %>